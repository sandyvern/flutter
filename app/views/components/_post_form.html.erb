<div class="panel panel-default post-form-panel">
  <div class="panel-body row">
    <div class="col-sm-1">
      <img src="/orange-cat.png" class="rounded-img" height="35px" width="35px"></img>  
    </div>
    <div class="col-sm-11">
      <%= form_for(@newPost) do |f| %>
        
        <center> 
          <div class="field style="margin-left: 10px;>
            <%= f.text_field :content,  autofocus: true, class: "form-control" %>
            <span style="float: right; margin-top: 5px;"><%= f.submit "Fweet", class: "btn btn-primary" %></span>
          </div>
        </center>
        
      <% end %>
      
    </div>
    
    <div class="col-sm-12">
                    
    </div>
                
  </div>
</div>


